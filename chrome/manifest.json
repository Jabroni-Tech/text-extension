{
  // TODO: Update once name is chosen
  "name": "Text-Extension",
  "short_name": "Text-Extend",
  "version": "0.0.1",
  "description": "Chrome extension that enhances highlighted text",
  "background": {
    "scripts": ["js/background.js", "js/contextMenu.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "views/popup.html"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["js/onClick.js"],
      "run_at": "document_idle"
    }
  ],
  "manifest_version": 2
}
